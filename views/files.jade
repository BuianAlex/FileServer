html
head
  link(href="//cdn.muicss.com/mui-0.10.1/css/mui.min.css" rel="stylesheet" type="text/css")
  link(href="./../css/main.css" rel="stylesheet" type="text/css")
  script(src="//cdn.muicss.com/mui-0.10.1/js/mui.min.js")
  title File storage
body
  div(class="mui-appbar")
     table(width="100%")
      tr(style="vertical-align:middle;")
        td( class="mui--appbar-height")
          h1 File storage
        td(class="mui--appbar-height" align="right")

          a(href="/") Home
          a(href="/files") Files
  
  form(method ="post" action="/files/upload" enctype="multipart/form-data" class="mui-panel send-form center-position" )
      input(type="file" name="fileUpload")
      input(type="submit" class="mui-btn mui-btn--primary" value="Submit")
  div(class="mui-panel")
    table(class="mui-table mui-table--bordered")
      thead
        tr
          th fileName             
          th path
          th size
          th type
          th uploadTime
          th lastModifiedDate
          th actions
      tbody    
        each file in data
          tr
           td
            a(href="/files/download/"+file._id)=file.fileName
           td= file.path
           td= file.size
           td= file.type
           td= file.createdAt   
           td= file.updatedAt
           td
            div(class="action")
             button(file-id=file._id class="mui-btn mui-btn--small mui-btn--raised " id="edit") edit
             button(file-id=file._id class="mui-btn mui-btn--small mui-btn--raised mui-btn--danger " id="delete") delete
script.
    var workflowData = !{JSON.stringify(data)};
script(src="./../js/main.js")